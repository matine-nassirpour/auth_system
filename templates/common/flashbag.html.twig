{% for label, messages in app.flashes %}
    <div class="mw-350px mx-auto">
        <div class="alert alert-{{ label }} alert-dismissible fade show text-center h5 my-4" role="alert">
            {% for message in messages %}
                <p class="text-center fw-bold">{{ message|raw }}
                    {% if label is same as("success") %}
                        &#x1F44D;
                    {% elseif label is same as("danger") %}
                        &#x1F6A7;
                    {% endif %}
                </p>
            {% endfor %}
            <button class="btn-close" type="button" data-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
{% endfor %}
